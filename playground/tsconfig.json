{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "vite-plugin-vue-layouts/client"],
    "paths": {
      "@/*": ["src/*"],
      "*": ["src/*.d.ts", "*.d.ts"],
      // "motion": ["../packages/motion/src/index.ts"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
